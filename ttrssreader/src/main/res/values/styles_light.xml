<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="TTRSS.Light" parent="TTRSS.Base.Light" />

    <style name="TTRSS.Base.Light" parent="Theme.AppCompat.Light">

        <item name="android:colorPrimary">@color/themeLightPrimary</item>
        <item name="android:colorPrimaryDark">@color/themeLightPrimaryDark</item>
        <item name="android:colorAccent">@color/themeLightAccent</item>
        <item name="colorAccentDark">@color/themeLightAccentDark</item>
        <item name="colorBackground">@color/themeLightBackground</item>
        <item name="android:textColorPrimary">@color/themeLightTextColorPrimary</item>
        <item name="android:textColor">@color/themeLightTextColor</item>

        <!-- Window settings -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Overall background -->
        <item name="android:windowBackground">?colorBackground</item>

        <!-- Background for Button-Navigation -->
        <item name="android:buttonBarStyle">@style/CustomButtonBarStyle</item>
        <!-- Color for Navigation-Buttons in ArticleView -->
        <item name="htmlHeaderBackgound">@color/themeLightHtmlHeaderBackgound</item>
        <!-- Theme for preferences -->
        <!--        <item name="android:alertDialogTheme">@style/TTRSS.Light.Dialog.Alert.Light</item>-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <style name="TTRSS.Light.Dialog.Alert.Light" parent="android:Theme.Material.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

</resources>
